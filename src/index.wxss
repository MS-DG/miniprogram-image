    background-size: 30%;
}

.Img-thumbnail,
.Img-data {
    -webkit-transition: opacity .8s;
    transition: opacity .8s;
}

.Img-thumbnail {
    filter: blur(25rpx);
    opacity: .9;
}

.Img-data {
    position: absolute;
    opacity: .1;
    /* display: none; */
}

.Img-data.is-loaded {
    position: static;
    opacity: inherit;
    display: inherit;
}

@keyframes loading {
    0% {
        -webkit-transform: rotate3d(0, 0, 1, 0deg);
        transform: rotate3d(0, 0, 1, 0deg);
    }
    100% {
        -webkit-transform: rotate3d(0, 0, 1, 360deg);
        transform: rotate3d(0, 0, 1, 360deg);
    }
}

:host {
    overflow: hidden;
}